<h1>domains</h1>
<div>
  <table id="domains">
    <thead>
    <tr>
      <th style="width:250px">Name</th>
      <th style="width:150px">Records</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
  </table>

  <script type="text/javascript">
    $(document).ready(function () {
      $('#domains').dataTable({
        'bProcessing':true,
        'bDeferRender':true,
        'sAjaxSource':'domains.json',
        /*'bJQueryUI': true,*/
        'bScrollInfinite ':true,
        'bFilter':false,
        'bInfo':false,
        'bPaginate':false,
        "aoColumns":[
          { "mDataProp":"name" },
          { "mDataProp":"numRecords" }
        ],
        "aoColumnDefs":[
          {
            "aTargets": [ 0 ],
            "fnRender": function ( oObj, sVal ) {
              return "<a href='domain.html?id=" + oObj.aData.id + "'>" + sVal + "</a>";
            }
          }
        ]
      });
    });
  </script>
</div>