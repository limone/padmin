<h1>domains</h1>
<div>
  <table id="domains">
    <thead>
        <tr>
            <th style="width:150px">Name</th>
            <th style="width:150px">Type</th>
            <th style="width:150px">Records</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
  
  <script type="text/javascript">    
    $(document).ready(function() {
      $('#domains').dataTable( {
        'bProcessing': true,
        'bDeferRender': true,
        'sAjaxSource': 'domains.json',
        'bJQueryUI': true,
        'bScrollInfinite ' : true,
        'bFilter' : false,
        'bInfo' : false,
        'bPaginate' : false,
        "aoColumns": [
                    { "mDataProp": "name" },
                    { "mDataProp": "type" },
                    { "mDataProp": "count_records" }
          ]
      });
    });
  </script>
</div>